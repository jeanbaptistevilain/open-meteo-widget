@font-face {
    font-family: 'lato_light';
    src: url('/lato/lato-light-webfont.eot');
    src: url('/lato/lato-light-webfont.eot?#iefix') format('embedded-opentype'),
    url('/lato/lato-light-webfont.woff') format('woff'),
    url('/lato/lato-light-webfont.ttf') format('truetype'),
    url('/lato/lato-light-webfont.svg#lato_lightregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'lato_regular';
    src: url('/lato/lato-regular-webfont.eot');
    src: url('/lato/lato-regular-webfont.eot?#iefix') format('embedded-opentype'),
    url('/lato/lato-regular-webfont.woff') format('woff'),
    url('/lato/lato-regular-webfont.ttf') format('truetype'),
    url('/lato/lato-regular-webfont.svg#lato_regular') format('svg');
    font-weight: normal;
    font-style: normal;
}

body {
    margin: 0;
    padding: 0;
}

#widget_factory {
    width: 600px;
    margin: 0 auto;
    font-family: 'lato_light', sans-serif;
}

#widget_factory h1, #widget_factory h2 {
    font-weight: normal;
    text-align: center;
}

#widget_factory p {
    text-align: justify;
    font-size: 18px;
    margin: 30px 0;
}

#widget_factory form {
    width: 40%;
    margin: 0 auto;
}

#widget_factory input, #widget_factory label {
    display: block;
    width: 100%;
    font-size: 20px;
}

#widget_factory hr {
    margin: 50px 0;
    height: 2px;
    opacity: 0.6;
    border: none;
    background-color: #aaa;
}

#weather_iframe {
    width: 280px;
    padding: 10px;
    margin: 0 auto;
}

#forecasts {
    padding: 10px;
    width: 90%;
    margin: 0 auto;
    box-shadow: 1px 1px 4px #aaa;
    -webkit-box-shadow: 1px 1px 4px #aaa;
    -moz-box-shadow: 1px 1px 4px #aaa;
}

#forecasts li {
    list-style-type: none;
    clear: both;
    font-family: 'lato_light', sans-serif;
}

#forecasts li.current-weather div.forecast-icon,
#forecasts li.weather-forecast div.forecast-icon {
    display: block;
    float: left;
    background-image: url(<%= asset_path('weather_icons.png') %>);
    background-repeat: no-repeat;
}

#forecasts li.current-weather div.forecast-icon {
    background-size: 360px 450px;
    width: 90px;
    height: 90px;
}

#forecasts li.weather-forecast div.forecast-icon {
    background-size: 240px 300px;
    width: 60px;
    height: 60px;
}

#forecasts li.current-weather div.forecast-date {
    font-size: 22px;
    text-align: center;
    font-family: 'lato_regular', sans-serif;
    padding-bottom: 10px;
}

#forecasts li.current-weather div.forecast-text {
    font-size: 32px;
    line-height: 80px;
}

#forecasts li.weather-forecast div.forecast-text {
    padding-top: 8px;
    padding-left: 6px;
    font-size: 18px;
    height: 60px;
}

#forecasts li.separator {
    height: 12px;
}

